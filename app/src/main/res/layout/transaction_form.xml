<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Category"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="368dp"
        android:layout_height="20dp"
        android:text="Add your transactions here:"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/submit_transaction_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:srcCompat="@android:drawable/ic_menu_save"
        tools:layout_editor_absoluteX="336dp"
        tools:layout_editor_absoluteY="463dp" />

    <TextView
        android:id="@+id/Category"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:text="Category:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="72dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="67dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/categoryInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Category" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/Amount"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:text="Amount:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="152dp" />

    <EditText
        android:id="@+id/amountInput"
        android:layout_width="258dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="141dp" />

    <android.support.constraint.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Switch
        android:id="@+id/IncomeExpense"
        android:layout_width="94dp"
        android:layout_height="76dp"
        android:layout_marginTop="24dp"
        android:contentDescription="Income or Expense"
        android:text="Income or Expense"
        android:textOff="Expense"
        android:textOn="Income"
        app:layout_constraintTop_toBottomOf="@+id/amountInput"
        tools:layout_editor_absoluteX="200dp" />

</android.support.constraint.ConstraintLayout>